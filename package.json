{
  "name": "wealth-atlas-sync",
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "esbuild src/handler.ts --bundle --platform=node --target=node18 --outdir=dist --minify --external:aws-sdk",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "local": "serverless offline",
    "logs": "serverless logs -f sync",
    "remove": "serverless remove",
    "test": "jest",
    "test:local": "node test-local.js",
    "test:api": "./test-api.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.3.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0"
  }
}